script/source = "extends KinematicBody2D


var dead_by_timer = false
var timer         = 0
var LIFE_TIME     = 15
var cooldown       = 0
var cooldown_timer = 2
var speed          = 100

var follow         = false

onready var player =  get_parent().get_node(\"Player\");

func _ready():
	dead_by_timer = get_parent().safe_faze

func _process(delta): 
	cooldown += delta
	if cooldown_timer < cooldown : shoot( player )

	move_and_slide( (player.position - position).normalized() * speed )

	if dead_by_timer:
		timer += delta
		if timer > LIFE_TIME:
			_on_dead()
	else:
		if get_parent().safe_faze:
			_on_dead()

func shoot(body):
	cooldown = 0
	var prefab = load( \"res://Scenes/Misle.tscn\" )
	var instance = prefab.instance()
	instance.dir = (body.position - position).normalized()
	instance.position = instance.dir * 50 + position
	get_parent().call_deferred(\"add_child\", instance)

func _on_Radar_body_entered(body):
	if body.is_in_group(\"player\"):
		follow = true
		shoot(body)

func _on_dead():
	var v = load(\"res://Scenes/Rock.tscn\")
	v = v.instance()
	v.position = position
	get_parent().call_deferred(\"add_child\", v)
	call_deferred(\"queue_free\")

func _on_Area2D_body_entered(body):
	if body.is_in_group(\"eatable\"):
		_on_dead()
	pass # Replace with function body.
"

