script/source = "extends KinematicBody2D


var dead_by_timer = false
var timer         = 0
var LIFE_TIME     = 15
var cooldown       = 0
var cooldown_timer = 2
var direction      = Vector2(0,0)
var speed          = 135

var boost = 0

var follow         = false

onready var player =  get_parent().get_node(\"Player\");

func _ready():
	dead_by_timer = get_parent().safe_faze

func _process(delta): 
	cooldown += delta
	if cooldown_timer < cooldown : chase()

	
	if ! boost:
		direction = (player.position - position).normalized()
		move_and_slide( direction * speed )
	else:
		move_and_slide( direction * ( speed + boost) )
		boost = max( 0, boost - boost*delta)

	if dead_by_timer:
		timer += delta
		if timer > LIFE_TIME:
			$AnimationPlayer.play(\"Dead\")
	else:
		if get_parent().safe_faze:
			$AnimationPlayer.play(\"Dead\")

func chase():
	cooldown = 0
	direction = (player.position - position).normalized()
	boost = 170

func _on_Radar_body_entered(body):
	if body.is_in_group(\"player\"):
		follow = true



func _on_dead():
	var v = load(\"res://Scenes/Rock.tscn\")
	v = v.instance()
	v.position = position
	get_parent().call_deferred(\"add_child\", v)
	call_deferred(\"queue_free\")

func _on_Area2D_body_entered(body):
	if body.is_in_group(\"player\"):
		body.hp -= 15
	if body.is_in_group(\"eatable\"):
		$AnimationPlayer.play(\"Dead\")
	pass # Replace with function body.


func _on_AnimationPlayer_animation_finished(anim_name):
	if anim_name == \"Dead\" : _on_dead()

