script/source = "extends KinematicBody2D


var dead_by_timer = false
var timer         = 0
var LIFE_TIME     = 5

func _ready():
	dead_by_timer = get_parent().safe_faze

func _process(delta): 
	if dead_by_timer:
		timer += delta
		if timer > LIFE_TIME:
			shoot()
			call_deferred(\"queue_free\")
	else:
		if get_parent().safe_faze:
			shoot()
			call_deferred(\"queue_free\")


func shoot():
	
	var directions = [ Vector2( 1, 0 ),
	                   Vector2( 0, 1 ),
					   Vector2( 0, -1 ), 
					   Vector2( 1, 1 ), 
					   Vector2( 1, -1 ),
					   Vector2( -1, 1 ), 
					   Vector2( -1, 0 ), 
					   Vector2( -1, -1 ) ]
	
	var prefab = load( \"res://Scenes/Misle.tscn\" )
	for direction in directions:
		var instance = prefab.instance()
		instance.dir = direction
		instance.position = direction * 50 + position
		get_parent().call_deferred(\"add_child\", instance)

func _on_Radar_body_entered(body):
	print( body )
	if body.is_in_group(\"player\"):
		shoot()
		call_deferred(\"queue_free\")

